trgProfile      3       # trigger profile, 0: Jpsi-B, 1: zero-bias, 2: main 2014, 3: main 2010+11
pairSel         0       # pair selection version, 0: already same vertex, 1: pair and then vertex
minNhits        15      # min number of track hits
maxAbsEta       0.8     # max track pseudorapidity, absolute value
maxNsigPID      4.      # max number of sigmas for TPC dE/dx PID
matchTof        1       # track - TOF matching, 1: required, 0: not required
maxAbsZvtx      30.     # maximal Z position of vertex, absolute value

